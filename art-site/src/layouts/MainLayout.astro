---
const navLinks = [
  { name: 'Personajes', href: '/personajes', inHeader: true },
  { name: '7 Familias', href: '/familias', inHeader: true },
  { name: 'Detrás de Hormenia', href: '/detras-de-hormenia', inHeader: true },
  
  { name: 'Cronología', href: '#', inHeader: false }, 
  { name: 'Mapa Interactivo', href: '#', inHeader: false },
];
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mundo a Color</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;500;700&display=swap" rel="stylesheet">
    
    <style is:global>
        html, body {
            background-color: #ffffff;
            color: #202124;
            font-family: 'DM Sans', sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
    </style>
</head>
<body class="pt-20"> 

    <nav class="fixed top-0 w-full z-50 bg-white border-b border-gray-100 h-16 flex items-center justify-between px-6 md:px-12 transition-shadow duration-300" id="navbar">
        
        <div class="flex items-center gap-2">
            <a href="/" class="text-xl font-medium text-gray-600 hover:text-blue-600 transition-colors">
                Mundo a Color
            </a>
        </div>
<div class="hidden md:flex items-center gap-8">
            {navLinks.filter(link => link.inHeader).map(link => (
                <a href={link.href} class="text-sm font-medium text-gray-500 hover:text-black transition-colors uppercase tracking-wide">
                    {link.name}
                </a>
            ))}
        </div>
        <div class="flex items-center gap-4">
            <div class="w-8 h-8 rounded-full bg-gray-200 overflow-hidden">
                <img src="https://ui-avatars.com/api/?name=User&background=random" alt="User" />
            </div>
            
            <button id="menu-btn" class="p-2 hover:bg-gray-100 rounded-full transition-colors">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
            </button>
        </div>
    </nav>
    <div id="side-menu-overlay" class="fixed inset-0 bg-black/20 backdrop-blur-sm z-40 opacity-0 pointer-events-none transition-opacity duration-300"></div>
    
    <div id="side-menu" class="fixed inset-y-0 right-0 w-80 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 z-50 p-8 flex flex-col">
        <div class="flex justify-end mb-8">
            <button id="close-menu" class="p-2 hover:bg-gray-100 rounded-full">
                <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>
        
        <nav class="flex flex-col gap-6">
            <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Navegación</span>
            {navLinks.map(link => (
                <a href={link.href} class="text-xl font-medium text-gray-800 hover:text-blue-600 transition-colors">
                    {link.name}
                </a>
            ))}
        </nav>
    </div>