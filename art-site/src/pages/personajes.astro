---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import fs from 'node:fs';
import path from 'node:path';

const personajes = await getCollection('personajes');

const getPersonajeImage = (id: string) => {
    const extensions = ['webp', 'png', 'jpg', 'jpeg'];
    
    for (const ext of extensions) {
        const filePath = path.join(process.cwd(), 'public', 'personajes', `${id}.${ext}`);
        if (fs.existsSync(filePath)) {
            return `/personajes/${id}.${ext}`;
        }
    }
    
    return "/default.png"; 
};

---

<MainLayout>

    <div class="max-w-[1600px] mx-auto px-6 py-12">
        
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Personajes</h1>
            <p class="text-gray-500">Registro oficial de sujetos de interés.</p>
        </header>

        <div class="columns-1 sm:columns-2 lg:columns-3 xl:columns-4 gap-6 space-y-6">
            
            {personajes.map((p) => {
                const imageSrc = getPersonajeImage(p.id);

                return (
                <div 
                    class="break-inside-avoid group cursor-pointer"
                    onclick={`openModal('${JSON.stringify({
                        nombre: p.data.nombre,
                        alias: p.data.alias || 'Desconocido',
                        colorHex: p.data.colorHex,
                        descripcion: p.data.descripcion,
                        casta: p.data.casta
                    }).replace(/"/g, "&quot;")}')`} 
                >
                    <div class="relative rounded-2xl overflow-hidden bg-gray-100 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
                        
                        <!-- Imagen -->
                        <img 
                            src={imageSrc} 
                            alt={p.data.nombre}
                            class="w-full h-auto object-cover"
                            loading="lazy"
                        />

                        <div class="absolute top-3 right-3 bg-white/90 backdrop-blur px-2 py-1 rounded text-[10px] font-bold shadow-sm uppercase tracking-wider text-gray-500">
                            {p.data.casta}
                        </div>

                        <!-- Overlay al Hover -->
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex items-end p-6">
                            <div class="text-white transform translate-y-4 group-hover:translate-y-0 transition-transform">
                                <span class="text-xs font-bold uppercase tracking-wider block opacity-80 mb-1" style={`color: ${p.data.colorHex}`}>
                                    {p.data.alias || 'Sin Alias'}
                                </span>
                                <h3 class="text-xl font-bold leading-tight">{p.data.nombre}</h3>
                            </div>
                        </div>
                    </div>
                </div>
            )})}

        </div>

    </div>

    <div id="modal-backdrop" class="fixed inset-0 bg-black/80 z-[100] hidden items-center justify-center opacity-0 transition-opacity duration-300 p-4 backdrop-blur-sm">
        <div id="modal-card" class="bg-white rounded-2xl shadow-2xl w-full max-w-5xl overflow-hidden flex flex-col md:flex-row transform scale-95 transition-transform duration-300" onclick="event.stopPropagation()">
            
            <div class="w-full md:w-1/2 bg-gray-100 relative min-h-[300px] md:min-h-[600px]">
                <img 
                    id="modal-img" 
                    src="" 
                    class="absolute inset-0 w-full h-full object-cover" 
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent md:hidden"></div>
            </div>

            <div class="w-full md:w-1/2 p-8 md:p-12 flex flex-col relative bg-white">
                
                <button onclick="closeModal()" class="absolute top-6 right-6 p-2 bg-gray-100 rounded-full hover:bg-gray-200 transition-colors z-10">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>

                <div>
                    <div class="mb-6">
                        <span id="modal-alias" class="text-xs font-bold uppercase tracking-[0.2em] text-gray-400 mb-2 block">El Alias</span>
                        <h2 id="modal-name" class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight">Nombre</h2>
                    </div>
                    
                    <div class="flex items-center gap-4 mb-8 border-y border-gray-100 py-4">
                        <div class="flex items-center gap-2">
                            <span id="modal-hex-circle" class="w-3 h-3 rounded-full shadow-sm"></span>
                            <span id="modal-casta" class="text-sm font-bold text-gray-700">Casta</span>
                        </div>
                        <div class="h-4 w-px bg-gray-200"></div>
                        <span id="modal-hex-text" class="text-sm font-mono text-gray-400">#HEX</span>
                    </div>

                    <p id="modal-desc" class="text-gray-600 leading-relaxed text-lg font-light">
                        Descripción...
                    </p>
                </div>

                <div class="mt-auto pt-10 flex gap-4">
                    <button class="px-6 py-3 bg-black text-white text-sm font-bold rounded-full hover:bg-gray-800 transition-colors uppercase tracking-wide">
                        Ver Archivos Relacionados
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script is:inline>
        const backdrop = document.getElementById('modal-backdrop');
        const card = document.getElementById('modal-card');
        
        const uiName = document.getElementById('modal-name');
        const uiAlias = document.getElementById('modal-alias');
        const uiHexText = document.getElementById('modal-hex-text');
        const uiHexCircle = document.getElementById('modal-hex-circle');
        const uiCasta = document.getElementById('modal-casta');
        const uiDesc = document.getElementById('modal-desc');
        const uiImg = document.getElementById('modal-img');

        window.openModal = (dataString) => {
            const data = JSON.parse(dataString);
            
            uiName.innerText = data.nombre;
            uiAlias.innerText = data.alias;
            uiHexText.innerText = data.colorHex;
            uiCasta.innerText = data.casta;
            uiDesc.innerText = data.descripcion;
            uiImg.src = data.img;
            
            uiHexCircle.style.backgroundColor = data.colorHex;
            uiAlias.style.color = data.colorHex; // Color al alias también para estilo

            backdrop.classList.remove('hidden');
            setTimeout(() => {
                backdrop.classList.remove('opacity-0');
                card.classList.remove('scale-95');
                card.classList.add('scale-100');
            }, 10);
        };

        window.closeModal = () => {
            backdrop.classList.add('opacity-0');
            card.classList.remove('scale-100');
            card.classList.add('scale-95');
            
            setTimeout(() => {
                backdrop.classList.add('hidden');
                uiImg.src = ''; 
            }, 300);
        };

        backdrop.addEventListener('click', window.closeModal);
        
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !backdrop.classList.contains('hidden')) {
                window.closeModal();
            }
        });
    </script>

</MainLayout>