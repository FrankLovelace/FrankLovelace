---
import MainLayout from '../layouts/MainLayout.astro';
//imagenes random xd
const cards = [
    {
        title: "Lorem",
        subtitle: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
        img: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=1974&auto=format&fit=crop",
    },
    {
        title: "Ipsum",
        subtitle: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
        img: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?q=80&w=2070&auto=format&fit=crop",
    },
    {
        title: "Dolor",
        subtitle: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
        img: "https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=2070&auto=format&fit=crop",
    },
    {
        title: "Sit Amet",
        subtitle: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
        img: "https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2072&auto=format&fit=crop",
    }
];
---

<MainLayout>

    <section class="text-center py-20 px-6">
        <h1 class="text-5xl md:text-6xl font-normal text-gray-900 mb-4 tracking-tight">
            Los jóvenes del futuro
        </h1>
        <div class="w-16 h-1 bg-gradient-to-r from-blue-500 to-cyan-400 mx-auto rounded-full mb-6"></div>
        <p class="text-lg text-gray-500 max-w-2xl mx-auto">
            Descubre a los herederos que llevarán a Hormenia hacia una nueva era de luz y progreso. 
        </p>
    </section>

    <section class="w-full px-4 pb-20 max-w-[1600px] mx-auto">
        <div class="flex flex-col md:flex-row gap-2 h-[600px] w-full">
            
            {cards.map((card) => (
                <div class="relative flex-1 hover:flex-[3] transition-all duration-700 ease-in-out cursor-pointer group overflow-hidden rounded-2xl">
                    
                    <!-- Imagen -->
                    <img 
                        src={card.img} 
                        class="absolute inset-0 w-full h-full object-cover filter brightness-[0.8] group-hover:brightness-100 transition-all duration-700"
                    />
                    
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60 group-hover:opacity-90 transition-opacity"></div>

                    <div class="absolute bottom-0 left-0 w-full p-8 translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                        <h2 class="text-4xl font-bold text-white mb-2">{card.title}</h2>
                        <div class="max-h-0 group-hover:max-h-40 overflow-hidden transition-all duration-700">
                            <p class="text-lg text-gray-200 font-medium">
                                {card.subtitle}
                            </p>
                            <span class="inline-block mt-4 text-xs bg-white text-black px-4 py-2 rounded-full font-bold uppercase tracking-wider hover:bg-blue-50">
                                Leer más
                            </span>
                        </div>
                    </div>
                </div>
            ))}

        </div>
    </section>

</MainLayout>