---
import NewspaperLayout from '../layouts/NewspaperLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const posts = (await getCollection('blog')).sort(
    (a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const latestPost = posts[0];
const otherPosts = posts.slice(1);

const formatDate = (date: Date) => {
    return date.toLocaleDateString('es-MX', { year: 'numeric', month: 'long', day: 'numeric' });
};
---

<NewspaperLayout>
    
    <div class="front-page">
        
        <article class="main-article">
            <a href={`/blog/${latestPost.slug}`} class="article-link">
                <h2 class="headline">{latestPost.data.title}</h2>
            </a>
            
            <div class="meta-info">
                <span>Por Frank Lovelace</span> | <span>{formatDate(latestPost.data.pubDate)}</span> | <span>{latestPost.data.category}</span>
            </div>
            
            <h3 class="sub-headline">{latestPost.data.description}</h3>
            
            {latestPost.data.heroImage && (
                <div class="image-container">
                    <img src={latestPost.data.heroImage} alt={latestPost.data.title} class="magic-photo" />
                    <figcaption>Fig 1. {latestPost.data.category}</figcaption>
                </div>
            )}

            <div class="article-body">
                <p>
                    <span class="drop-cap">{latestPost.body.charAt(0)}</span>{latestPost.body.slice(1, 400)}...
                </p>
                <div class="continue-reading">
                    <a href={`/blog/${latestPost.slug}`}>Continúa en página 2 →</a>
                </div>
            </div>
        </article>

        <aside class="sidebar">
            
            <div class="sidebar-block">
                <h4>ARCHIVO RECIENTE</h4>
                <hr class="short-line">
                
                {otherPosts.length > 0 ? (
                    <ul class="news-list">
                        {otherPosts.map((post: CollectionEntry<'blog'>) => (
                            <li>
                                <span class="news-cat">{post.data.category}</span>
                                <a href={`/blog/${post.slug}`} class="news-title">
                                    <strong>{post.data.title}</strong>
                                </a>
                                <p class="news-desc">{post.data.description.slice(0, 60)}...</p>
                            </li>
                        ))}
                    </ul>
                ) : (
                    <p style="text-align: center; font-style: italic; font-size: 0.9rem;">No hay más noticias por hoy.</p>
                )}
            </div>

            <div class="wanted-poster">
                <h4>¿Quién soy?</h4>
                <div class="mugshot">
                    <img src="me.jpeg" alt="Profile"> 
                </div>
                <p class="wanted-text">
                    <strong>FRANK LOVELACE</strong><br>
                    Desarrollador Full-Stack<br>
                    "defenderé tu voz, no lo que tu voz signifique"
                </p>
            </div>

        </aside>

    </div>

</NewspaperLayout>

<style>
    .front-page {
        display: grid;
        grid-template-columns: 7fr 3fr; 
        gap: 40px;
        align-items: start; 
    }

    .headline {
        font-family: 'Cinzel', serif;
        font-size: clamp(2rem, 4vw, 3.5rem); 
        line-height: 0.9;
        font-weight: 900;
        margin-bottom: 10px;
        text-transform: uppercase;
        word-wrap: break-word; 
        }

    .meta-info {
        font-family: sans-serif;
        font-size: 0.75rem;
        text-transform: uppercase;
        margin: 10px 0;
        border-top: 1px solid #1a1a1a;
        border-bottom: 1px solid #1a1a1a;
        padding: 5px 0;
    }

    .sub-headline {
        font-family: 'Playfair Display', serif;
        font-size: 1.2rem;
        font-style: italic;
        font-weight: 400;
        margin-bottom: 20px;
    }

    .image-container {
        margin-bottom: 20px;
        border: 1px solid #1a1a1a;
        padding: 5px;
        background: white;
    }

    .magic-photo {
        width: 100%;
        height: auto;
        filter: grayscale(100%) contrast(110%);
        display: block;
    }

    figcaption {
        font-size: 0.8rem;
        font-family: sans-serif;
        padding: 5px;
        text-align: center;
        font-style: italic;
        border-top: 1px solid #eee;
    }

    .article-body {
        font-size: 1.1rem;
        line-height: 1.6;
        text-align: justify;
    }
    
    @media (min-width: 768px) {
        .article-body {
            columns: 2;
            column-gap: 25px;
        }
    }

    .drop-cap {
        float: left;
        font-family: 'Cinzel', serif;
        font-size: 3.5rem;
        line-height: 0.8;
        padding-top: 4px;
        padding-right: 8px;
        font-weight: bold;
    }

    .sidebar-block {
        border-top: 4px double #1a1a1a;
        margin-bottom: 40px;
        padding-top: 10px;
    }

    .sidebar h4 {
        font-family: 'Cinzel', serif;
        text-align: center;
        margin: 0 0 15px 0;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .news-list { list-style: none; padding: 0; }
    .news-list li {
        margin-bottom: 20px;
        border-bottom: 1px dotted #1a1a1a;
        padding-bottom: 15px;
    }

    .news-cat {
        font-size: 0.6rem;
        font-family: sans-serif;
        text-transform: uppercase;
        background: #1a1a1a;
        color: white;
        padding: 2px 6px;
        display: inline-block;
        margin-bottom: 5px;
    }

    .news-title {
        display: block;
        font-family: 'Playfair Display', serif;
        font-size: 1.1rem;
        font-weight: bold;
        line-height: 1.2;
        text-decoration: none;
        color: inherit;
    }
    
    .wanted-poster {
        background: #e8e4da;
        border: 3px solid #1a1a1a;
        padding: 20px;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 5px 5px 0px rgba(0,0,0,0.15);
    }

    @media (min-width: 1024px) {
        .wanted-poster { transform: rotate(2deg); }
    }

    .mugshot {
        width: 120px;
        height: 140px;
        background: #1a1a1a;
        margin: 15px auto;
        border: 1px solid #1a1a1a;
    }
    
    .mugshot img { width: 100%; height: 100%; object-cover: cover; filter: grayscale(100%); }

    .wanted-text { font-family: 'Cinzel', serif; line-height: 1.4; margin-top: 10px;}

    @media (max-width: 768px) {
        .front-page {
            grid-template-columns: 1fr; 
            gap: 20px;
        }

        .headline {
            font-size: 2.2rem; 
        }

        .article-body {
            text-align: left; 
        }
        
        .sidebar {
            order: 2; 
            border-top: 3px solid #1a1a1a;
            padding-top: 30px;
            margin-top: 20px;
        }
    }
</style>